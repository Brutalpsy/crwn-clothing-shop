{
  "name": "crwn-clothing-server",
  "version": "1.0.0",
  "engines": {
    "node": "11.7.0",
    "npm": "6.9.0"
  },
  "scripts": {
    "client": "cd client && npm run start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node server.js",
    "stop": "taskkill -F -IM node.exe",
    "heroku-postbuild": "cd client && npm i && npm i --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "express": "^4.18.2",
    "express-sslify": "^1.2.0",
    "stripe": "6.28.0"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "nodemon": "^1.19.1"
  }
}
